@page
@model SupermarketWEB.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Index Products";
}
<h1>Index Products</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Productos[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productos[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productos[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productos[0].Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Productos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>


